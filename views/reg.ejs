<div class="container" style="width:538px;">
	<form  class="form-signin"  method="post">
		<fieldset> 
			<legend>用户注册</legend>
			<div class="form-group">
				<label class="control-label" for="username">用户名</label> 
				<input type="text" class="form-control" id="username" name="username">
				<p class="help-block">你的账户名称，用于登录和显示。</p> 
			</div> 
			<div class="form-group">
				<label for="user_password">密码</label>
				<input type="password" class="form-control" id="password" name="password">
			</div> 
			<div class="form-group">
				<label for="user_password">重复输入密码</label>
				<input type="password" class="form-control" id="password-repeat" name="password-repeat">
			</div> 
			<div class="form-actions">
				<button type="submit" class="btn btn-lg btn-primary btn-block">注册</button>
			</div> 
		</fieldset> 
	</form> 
</div>